{
  "name": "react-package-template",
  "version": "1.0.0",
  "description": "React package template",
  "license": "MIT",
  "author": {
    "name": "Gregor Adams",
    "url": "https://github.com/pixelass"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": [
        "./dist/*.mjs",
        "./dist/index.mjs"
      ],
      "require": [
        "./dist/*.cjs",
        "./dist/index.cjs"
      ],
      "default": [
        "./dist/*.js",
        "./dist/index.js"
      ],
      "types": [
        "./dist/*.d.ts",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist/{**/*,*}(d)?.(m)?[tj]s(.map)?"
  ],
  "scripts": {
    "build": "yarn rollup",
    "clean": "yarn dlx rimraf dist",
    "dev": "yarn rollup -w",
    "eslint": "eslint 'src/{**/*,*}.{js,ts,tsx}'",
    "eslint:fix": "yarn eslint --fix",
    "postinstall": "husky install",
    "lint": "yarn tsc:noEmit && yarn eslint",
    "ncu": "yarn dlx npm-check-updates -u --dep='prod,dev'",
    "ncu:minor": "yarn ncu -t minor",
    "ncu:patch": "yarn ncu -t patch",
    "prepublishOnly": "yarn clean && yarn build && yarn tsc:emitOnly",
    "prettier": "prettier 'src/{**/*,*}.{ts,tsx}'",
    "rollup": "rollup -c",
    "spj": "yarn dlx sort-package-json package.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "toc": "yarn dlx markdown-toc README.md -i",
    "tsc:emitOnly": "tsc --emitDeclarationOnly --project tsconfig.build.json",
    "tsc:noEmit": "tsc --noEmit",
    "unimported": "yarn dlx unimported"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@jest/globals": "^29.2.2",
    "@swc/core": "^1.3.14",
    "@swc/jest": "^0.2.22",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.2",
    "@types/node": "^16.11.45",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^44.0.2",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-config": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.2.5",
    "rollup-plugin-swc3": "^0.7.0",
    "tslib": "^2.4.1",
    "type-fest": "^3.1.0",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "packageManager": "yarn@3.2.0",
  "engines": {
    "node": "^16 | ^17 | ^18"
  }
}
